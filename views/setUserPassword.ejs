<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./pages/headerfiles") %> <%- include("./pages/scriptfiles") %>
    <title>Set New Password</title>
  </head>
  <body>
    <%- include("./pages/header.ejs") %>
    <div class="container">
      <div class="row">
        <h1 class="p-5">Set New Password</h1>
      </div>
      <form id="usersetpass">
        <div class="row mt-3">
          <div class="col-sm-6">
            <label for="newpass" class="form-label">New Password:</label>
          </div>
          <div class="col-sm-6">
            <input
              type="password"
              name="newpass"
              id="newpass"
              class="form-control"
            />
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-sm-6">
            <label for="confirmnewpass" class="form-label"
              >Confirm New Password:</label
            >
          </div>
          <div class="col-sm-6">
            <input
              type="password"
              name="confirmnewpass"
              id="confirmnewpass"
              class="form-control"
            />
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-sm-12 text-center">
            <button
              type="button"
              class="btn btn-primary"
              onclick="setNewPassword()"
            >
              Set New Password
            </button>
          </div>
        </div>
      </form>
    </div>
    <%- include("./pages/footer.ejs") %>
    <script>
      let setNewPassword = () => {
        let form = document.getElementById("usersetpass");
        let fd = new FormData(form);
        let newpass = document.getElementById("newpass").value;
        let confirmnewpass = document.getElementById("confirmnewpass").value;
        if (newpass == confirmnewpass) {
          fetch(`/user/setNewPassword/<%=email%>`, { method: "POST", body: fd })
            .then((res) => res.json())
            .then((res) => {
              console.log(res);
              if (res.error) {
                alert("Error");
              } else {
                alert("Password Set Successfully!");
                window.location.href = "/user/login";
              }
            });
        } else {
          alert("Password and Confirm Password do not match");
        }
      };
    </script>
  </body>
</html>
