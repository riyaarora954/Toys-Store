<!DOCTYPE html>
<html dir="ltr" lang="en-US">
  <head>
    <%- include("./pages/headerfiles.ejs") %>

    <!-- Document Title
  ============================================= -->
    <title>Log in</title>
  </head>
  <body id="login">
    <main>
      <div id="menu_wrapper" class=""></div>
      <!-- --------------------loader------------ -->
      <div id="spin-wrapper"></div>
      <div id="siteloader">
        <div class="loader"></div>
      </div>
      <!-- --------------------header------------ -->
      <%-include("./pages/userNavbar.ejs")%>
      <!-- -------------------mobile media---------- -->
      <div
        id="mobile_top_menu_wrapper"
        class="hidden-lg-up"
        style="display: none"
      >
        <div id="top_menu_closer">
          <i class="material-icons">Óóç</i>
        </div>
        <div class="js-top-menu mobile" id="_mobile_top_menu"></div>
      </div>
      <!-- --------------------Breadcrumb------------ -->

      <!-- -----------Cart page----------- -->
      <section id="wrapper">
        <div class="container">
          <div class="row">
            <div id="content-wrapper" class="col-12">
              <section id="main">
                <div class="login-page">
                  <div class="block-title">
                    <h2 class="title"><span>Change Password</span></h2>
                  </div>
                  <form id="changePassword">
                    <div class="row mt-3">
                      <div class="col-sm-6">
                        <label for="oldPassword" class="form-label"
                          >Old Password</label
                        >
                      </div>
                      <div class="col-sm-6">
                        <input
                          type="password"
                          id="oldPassword"
                          name="oldPassword"
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-6">
                        <label for="newPassword" class="form-label"
                          >New Password</label
                        >
                      </div>
                      <div class="col-sm-6">
                        <input
                          type="password"
                          id="newPassword"
                          name="newPassword"
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-6">
                        <label for="confirmPassword" class="form-label"
                          >Confirm New Password</label
                        >
                      </div>
                      <div class="col-sm-6">
                        <input
                          type="password"
                          id="confirmPassword"
                          name="confirmPassword"
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-sm-12 text-center">
                        <button
                          type="button"
                          class="btn btn-primary"
                          onclick="changePassword()"
                        >
                          Change
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </section>
            </div>
          </div>
        </div>
      </section>
      <!-- -----------------footer-------------------- -->
      <%-include("./pages/footer.ejs")%>
    </main>
    <%-include("./pages/scriptfiles.ejs")%>
    <script type="text/javascript">
      var typed = new Typed("#typed", {
        stringsElement: "#typed-strings",
        typeSpeed: 90,
        backSpeed: 90,
        startDelay: 1000,
        showCursor: false,
        loop: true,
      });
    </script>
    <script>
      async function changePassword() {
        $("#changePassword").validate();
        if ($("#changePassword").valid()) {
          let form = document.getElementById("changePassword");
          let fd = new FormData(form);
          let response = await fetch("/user/updatePassword", {
            method: "POST",
            body: fd,
          });

          response = await response.json();
          if (response.error == "true") {
            alert(response.message);
          } else {
            alert(response.message);
            document.getElementById("changePassword").reset();
          }
        } else {
          console.log("error");
        }
      }
    </script>
  </body>
</html>
