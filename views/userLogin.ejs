<!DOCTYPE html>
<html dir="ltr" lang="en-US">
  <head>
    <%- include("./pages/headerfiles.ejs") %>

    <!-- Document Title
  ============================================= -->
    <title>Log in</title>
  </head>
  <body id="login">
    <main>
      <div id="menu_wrapper" class=""></div>
      <!-- --------------------loader------------ -->
      <div id="spin-wrapper"></div>
      <div id="siteloader">
        <div class="loader"></div>
      </div>
      <!-- --------------------header------------ -->
      <%-include("./pages/header.ejs")%>
      <!-- -------------------mobile media---------- -->
      <div
        id="mobile_top_menu_wrapper"
        class="hidden-lg-up"
        style="display: none"
      >
        <div id="top_menu_closer">
          <i class="material-icons">Óóç</i>
        </div>
        <div class="js-top-menu mobile" id="_mobile_top_menu"></div>
      </div>
      <!-- --------------------Breadcrumb------------ -->
      <div class="breadcrumb-container">
        <nav data-depth="2" class="breadcrumb container">
          <h1 class="h1 category-title breadcrumb-title">Login</h1>
          <ul>
            <li>
              <a href="/">
                <span>Home</span>
              </a>
            </li>
            <li>
              <a href="/user/login">
                <span>Login</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <!-- -----------Cart page----------- -->
      <section id="wrapper">
        <div class="container">
          <div class="row">
            <div id="content-wrapper" class="col-12">
              <section id="main">
                <div class="login-page">
                  <div class="block-title">
                    <h2 class="title"><span>Login</span></h2>
                  </div>
                  <form
                    id="userForm"
                    method="post"
                    enctype="multipart/form-data"
                    class="card"
                  >
                    <div class="login-form">
                      <div class="form-group row">
                        <label
                          class="col-md-3 col-sm-12 form-control-label required"
                          >Email</label
                        >
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="email"
                            type="email"
                            id="email"
                            value=""
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-md-3 col-sm-12 form-control-label">
                          Password
                        </label>
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="password"
                            id="password"
                            type="password"
                            value=""
                          />
                        </div>
                      </div>
                      <div class="form-group text-center">
                        <div class="link">
                          <a href="/user/forgotPassword"
                            >Forgot your password?</a
                          >
                          <a href="/user/signup"> Register</a>
                        </div>
                      </div>
                      <div class="form-group text-center">
                        <input
                          class="btn btn-primary"
                          value="Sign In"
                          type="button"
                          onclick="login()"
                        />
                      </div>
                    </div>
                  </form>
                </div>
              </section>
            </div>
          </div>
        </div>
      </section>
      <!-- -----------------footer-------------------- -->
      <%-include("./pages/footer.ejs")%>
    </main>
    <%-include("./pages/scriptfiles.ejs")%>
    <script type="text/javascript">
      var typed = new Typed("#typed", {
        stringsElement: "#typed-strings",
        typeSpeed: 90,
        backSpeed: 90,
        startDelay: 1000,
        showCursor: false,
        loop: true,
      });
    </script>
    <script>
      let login = () => {
        $("#userForm").validate();
        if ($("#userForm").valid()) {
          let form = document.getElementById("userForm");
          let fd = new FormData(form);

          fetch("/user/info", { method: "POST", body: fd })
            .then((res) => res.json())
            .then((res) => {
              if (res.error === true) {
                swal.fire({
                  title: "Error",
                  text: res.message,
                  icon: "error",
                });
              } else {
                alert(res.message);
                console.log(res.token);
                window.location.href = "/user/dashboard";
              }
            });
        }
      };
    </script>
  </body>
</html>
