<!DOCTYPE html>
<html dir="ltr" lang="en-US">
  <head>
    <%- include("./pages/headerfiles.ejs") %>

    <title>Create Account</title>
  </head>
  <body id="Register">
    <main>
      <div id="menu_wrapper" class=""></div>
      <!-- --------------------loader------------ -->
      <div id="spin-wrapper"></div>
      <div id="siteloader">
        <div class="loader"></div>
      </div>
      <!-- --------------------header------------ -->
      <%- include("./pages/header.ejs") %>
      <!-- -------------------mobile media---------- -->
      <div
        id="mobile_top_menu_wrapper"
        class="hidden-lg-up"
        style="display: none"
      >
        <div id="top_menu_closer">
          <i class="material-icons">Óóç</i>
        </div>
        <div class="js-top-menu mobile" id="_mobile_top_menu"></div>
      </div>
      <!-- --------------------Breadcrumb------------ -->
      <div class="breadcrumb-container">
        <nav data-depth="2" class="breadcrumb container">
          <h1 class="h1 category-title breadcrumb-title">Create Account</h1>
          <ul>
            <li>
              <a href="/">
                <span>Home</span>
              </a>
            </li>
            <li>
              <a href="/user/SignUp">
                <span>Create Account</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <!-- -----------Cart page----------- -->
      <section id="wrapper">
        <div class="container">
          <div class="row">
            <div id="content-wrapper" class="col-12">
              <section id="main">
                <div class="login-page">
                  <div class="block-title">
                    <h2 class="title"><span>Create Account</span></h2>
                  </div>
                  <form
                    id="signUpForm"
                    method="post"
                    enctype="multipart/form-data"
                    class="card"
                  >
                    <div class="login-form">
                      <div class="form-group row">
                        <label
                          class="col-md-3 col-sm-12 form-control-label required"
                          >First name</label
                        >
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            id="fname"
                            name="fname"
                            type="text"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label
                          class="col-md-3 col-sm-12 form-control-label required"
                          >Last name</label
                        >
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            id="lname"
                            name="lname"
                            type="text"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label
                          class="col-md-3 col-sm-12 form-control-label required"
                          >Email</label
                        >
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="email"
                            id="email"
                            type="email"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-md-3 col-sm-12 form-control-label">
                          Password
                        </label>
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="password"
                            id="password"
                            type="password"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-md-3 col-sm-12 form-control-label">
                          Phone Number
                        </label>
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="phone"
                            id="phone"
                            type="tel"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-md-3 col-sm-12 form-control-label">
                          Address
                        </label>
                        <div class="col-md-9 col-sm-12">
                          <textarea
                            class="form-control"
                            name="address"
                            id="address"
                            value=""
                          ></textarea>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-md-3 col-sm-12 form-control-label">
                          Pincode
                        </label>
                        <div class="col-md-9 col-sm-12">
                          <input
                            class="form-control"
                            name="pincode"
                            id="pincode"
                            type="number"
                            value=""
                            required
                          />
                        </div>
                      </div>
                      <div class="form-group text-center">
                        <input
                          class="btn btn-primary"
                          value="Create Account"
                          type="button"
                          onclick="signup()"
                        />
                      </div>
                    </div>
                  </form>
                </div>
              </section>
            </div>
          </div>
        </div>
      </section>
      <!-- -----------------footer-------------------- -->
      <%-include("./pages/footer.ejs")%>
    </main>
    <%-include("./pages/scriptfiles.ejs")%>
    <script type="text/javascript">
      var typed = new Typed("#typed", {
        stringsElement: "#typed-strings",
        typeSpeed: 90,
        backSpeed: 90,
        startDelay: 1000,
        showCursor: false,
        loop: true,
      });
    </script>
    <script>
      async function signup() {
        $("#signUpForm").validate();
        if ($("#signUpForm").valid()) {
          let form = document.getElementById("signUpForm");
          let fd = new FormData(form);
          let response = await fetch("/user/signUpAction", {
            method: "POST",
            body: fd,
          });

          response = await response.json();
          if (response.error == "true") {
            alert(response.message);
          } else {
            alert("User signed up Successfully!");
            document.getElementById("signUpForm").reset();
          }
        } else {
          console.log("error");
        }
      }
    </script>
  </body>
</html>
