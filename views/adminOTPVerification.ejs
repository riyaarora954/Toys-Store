<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./pages/headerfiles") %>
    <title>OTP Verification</title>
  </head>
  <body>
    <section id="wrapper">
      <div class="container">
        <div class="row">
          <div id="content-wrapper" class="col-12">
            <section id="main">
              <div class="login-page">
                <div class="block-title">
                  <h2 class="title"><span>OTP Verification</span></h2>
                </div>

                <form id="adminotp">
                  <div class="row mt-3">
                    <div class="col-sm-6">
                      <label for="otp" class="form-label">Enter OTP:</label>
                    </div>
                    <input type="hidden" name="email" id="email" />
                    <div class="col-sm-6">
                      <input
                        type="number"
                        name="otp"
                        id="otp"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="row mt-5">
                    <div class="col-sm-12 text-center">
                      <button
                        type="button"
                        class="btn btn-primary"
                        onclick="verifyOTP()"
                      >
                        Verify OTP
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
    <script>
      let verifyOTP = () => {
        let form = document.getElementById("adminotp");
        let fd = new FormData(form);
        fetch(`/admin/verify-OTP/<%=email%>`, { method: "POST", body: fd })
          .then((res) => res.json())
          .then((res) => {
            console.log(res);
            if (res.error == true) {
              alert(res.message);
            } else {
              console.log(res);
              alert("OTP Verified Successfully");
              window.location.href = `/admin/setPassword/<%=email%>`;
            }
          });
      };
    </script>
  </body>
</html>
