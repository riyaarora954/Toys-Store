<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./pages/headerfiles") %>
    <title>Set New Password</title>
  </head>
  <body>
    <section id="wrapper">
      <div class="container">
        <div class="row">
          <div id="content-wrapper" class="col-12">
            <section id="main">
              <div class="login-page">
                <div class="block-title">
                  <h2 class="title"><span>Set New Password</span></h2>
                </div>
                <form id="adminsetpass">
                  <div class="row mt-3">
                    <div class="col-sm-6">
                      <label for="newpass" class="form-label"
                        >Set New Password:</label
                      >
                    </div>
                    <div class="col-sm-6">
                      <input
                        type="password"
                        name="newpass"
                        id="newpass"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="row mt-3">
                    <div class="col-sm-6">
                      <label for="confirmnewpass" class="form-label"
                        >Confirm New Password:</label
                      >
                    </div>
                    <div class="col-sm-6">
                      <input
                        type="password"
                        name="confirmnewpass"
                        id="confirmnewpass"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="row mt-5">
                    <div class="col-sm-12 text-center">
                      <button
                        type="button"
                        class="btn btn-primary"
                        onclick="setNewPassword()"
                      >
                        Set New Password
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
    <script>
      let setNewPassword = () => {
        let form = document.getElementById("adminsetpass");
        let fd = new FormData(form);
        let newpass = document.getElementById("newpass").value;
        let confirmnewpass = document.getElementById("confirmnewpass").value;
        if (newpass == confirmnewpass) {
          fetch(`/admin/setNewPassword/<%=email%>`, {
            method: "POST",
            body: fd,
          })
            .then((res) => res.json())
            .then((res) => {
              console.log(res);
              if (res.error) {
                alert("Error");
              } else {
                alert("Password Set Successfully!");
              }
            });
        } else {
          alert("Password and Confirm Password do not match");
        }
      };
    </script>
  </body>
</html>
